{
    "compilerOptions": {
        "module": "nodenext",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "ES2022",
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": true,
        "esModuleInterop": true
    },
    "exclude": ["node_modules", "**/*.spec.ts"]
}
